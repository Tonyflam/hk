# NEXUS-402 Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Cronos Network Configuration
# ===========================================
CRONOS_RPC_URL=https://evm-t3.cronos.org
CHAIN_ID=338

# Mainnet (for production)
# CRONOS_RPC_URL=https://evm.cronos.org
# CHAIN_ID=25

# ===========================================
# Wallet Configuration
# ===========================================
# Your deployer/admin private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# ===========================================
# Token Addresses (Cronos Testnet)
# ===========================================
USDC_ADDRESS=0x8f4ae4b0a4e8fac07ab521c0d13e26400fe1ce1a

# ===========================================
# Contract Addresses (after deployment)
# ===========================================
NEXUS_REGISTRY_ADDRESS=
WORKFLOW_ENGINE_ADDRESS=
PAYMENT_ROUTER_ADDRESS=
AGENT_MARKETPLACE_ADDRESS=

# ===========================================
# Backend API Configuration
# ===========================================
PORT=3001
NODE_ENV=development
NEXUS_API_URL=http://localhost:3001

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WALLET_CONNECT_ID=your_walletconnect_project_id

# ===========================================
# Demo Agents Configuration
# ===========================================
DEFI_AGENT_PORT=4001
PAYMENT_AGENT_PORT=4002
ORACLE_AGENT_PORT=4003

